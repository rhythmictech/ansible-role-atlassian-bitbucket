# {{ ansible_managed }}

[Unit]
Description=Atlassian Bitbucket Server Service
After=syslog.target network.target

[Service]
Type=forking

Environment=BITBUCKET_USER={{ bitbucket_user }}
Environment=BITBUCKET_HOME={{ bitbucket_data_dir }}
Environment=JVM_MAXIMUM_MEMORY={{ bitbucket_jvm_max_memory }}
Environment=JAVA_HOME=/usr/lib/jvm/jre

User={{ bitbucket_user }}
ExecStart={{ bitbucket_base_dir }}/current/bin/start-bitbucket.sh
ExecStop={{ bitbucket_base_dir }}/current/bin/stop-bitbucket.sh

[Install]
WantedBy=multi-user.target
